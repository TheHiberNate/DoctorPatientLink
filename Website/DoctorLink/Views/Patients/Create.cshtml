@model Patient //even tho not being passed into view by controller

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Patient</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*Display validation summary at the top*@
        <div class="mb-3">
            <label asp-for="FirstName"></label>  @*bind user input to NAME variable with tag helpers*@
            <input asp-for="FirstName" class="form-control" /> @*bootstrap class form-control*@
            <span asp-validation-for="FirstName" class="text-danger"></span> @*Tag helper for validation*@
        </div>
        <div class="mb-3">
            <label asp-for=LastName></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <a asp-controller="Medications" asp-action="Index" class="btn btn-secondary" style="width:150px">
                @*Back to List button*@
                Add Medications
            </a>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button> @*because btn is within post form, will perform post action defined in controller*@
        <a asp-controller="Patients" asp-action="Index" class="btn btn-secondary" style="width:150px"> @*Back to List button*@
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" /> //get validation on client side (no need to refresh and check server)
    }
}

