@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Index";
}

@*<partial name="_Notification" /> To use partial view, added it to _Layout to use in all views*@
<div class="container p-3"
    <div class="row">
        <div class="col-sm">
            <h1 class="text-primary">Patient List</h1>
        </div>
        <div class="col-sm text-end">
            <a asp-controller="Patients" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bag-plus"></i> &nbsp; Add New Patient
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%"
    <thead>
        <tr>
            <th>
                First Name
            </th>
             <th>
                Last Name
            </th>
            <th>
                Medications
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width = "30%">
                    @obj.FirstName
                </td>
                <td width = "30%">
                    @obj.LastName
                </td>
                <td width="50%">
                    <a asp-controller="Medications" asp-action="Index" asp-route-PatientId="@obj.PatientId" class="btn btn-secondary mx-0"> <i class="bi bi-prescription2"></i> Medication Details </a>
                </td>
                <td width="80%">
@*                     <div class="w-75 btn group" role="group">
                        <a asp-controller="Patients" asp-action="Edit" asp-route-id="@obj.PatientId"
                        class="btn btn-secondary mx-0"><i class="bi bi-pencil"></i> Edit </a>
                        <a asp-controller="Patients" asp-action="Delete" asp-route-id="@obj.PatientId"
                        class="btn btn-secondary mx-0"><i class="bi bi-trash"></i> Remove </a>
                    </div> *@
                    <div class="btn-group" role="group" aria-label="Button group with Edit and Remove buttons">
                        <a asp-controller="Patients" asp-action="Edit" asp-route-id="@obj.PatientId" class="btn btn-secondary mx-0">
                            <i class="bi bi-pencil"></i> Edit</a>
                            <a asp-controller="Patients" asp-action="Delete" asp-route-id="@obj.PatientId" class="btn btn-secondary mx-0">
                            <i class="bi bi-trash"></i> Remove</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>

</div>
